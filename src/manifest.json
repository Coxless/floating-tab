{
  "manifest_version": 3,
  "name": "FloatingTab",
  "version": "1.0.0",
  "description": "全画面モードでタブ切り替えと検索を快適にする拡張機能",
  "permissions": ["tabs", "storage", "activeTab", "search"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "src/background/background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.ts"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/floating-tab_original_16.png",
      "48": "icons/floating-tab_original_48.png",
      "128": "icons/floating-tab_original_128.png"
    }
  },
  "commands": {
    "toggle-popup": {
      "suggested_key": {
        "default": "Ctrl+Shift+Space",
        "mac": "Command+Shift+Space"
      },
      "description": "FloatingTabポップアップの表示/非表示"
    }
  },
  "icons": {
    "16": "icons/floating-tab_original_16.png",
    "48": "icons/floating-tab_original_48.png",
    "128": "icons/floating-tab_original_128.png"
  }
}
